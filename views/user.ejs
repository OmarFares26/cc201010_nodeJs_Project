<!DOCTYPE HTML>
<html>
<head>
    <title>User page</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    <link rel="stylesheet" media="screen" href="https://fontlibrary.org//face/some-time-later" type="text/css"/>
    <link rel="stylesheet" href="/Users1.css" >
    <link rel="stylesheet" href="/User.css">


</head>
<body class="is-preload">

<!-- Wrapper -->
<div id="wrapper" class="fade-in">
    <!-- Nav -->
    <nav id="nav">
        <ul class="links">
            <li><a href="/">HOME</a></li>
            <li><a href="/users">USERS</a></li>
            <li><a href="/register">REGISTER</a></li>
            <li ><a href="/login">LOGIN</a></li>
        </ul>
        <ul class="icons">
            <li><a href="/logout">LogOut</a></li>
        </ul>

    </nav>

    <!-- Main -->
    <div id="main">
        <!-- Featured Post -->
        <article class="post featured">
            <h2><%= user.Character_Firstname %></h2>
            <a href="#" class="image main"><img src="<%= user.Character_Image%>" alt="" width="200" height="300" /></a>
            <header class="major">
                <span class="date" style=" margin-bottom: 30px;font-size: 1.2rem">USER DETAILS</span>
                <table class="customTable">
                    <tbody>
                    <tr>
                        <td class="head">First Name</td>
                        <td><%= user.Character_Firstname %></td>
                    </tr>

                    <tr>
                        <td class="head">Last name</td>
                        <td><%= user.Character_Lastname %></td>
                    </tr>
                    <tr>
                        <td class="head">Nick name</td>
                        <td><%= user.Character_Nickname %></td>
                    </tr>
                    <tr>
                        <td class="head">Email</td>
                        <td><%= user.email %></td>
                    </tr>
                    </tbody>

                </table>


            </header>

            <ul class="actions special">
                <li><a href="/users/<%= user.id%>/edit" class="button large">EDIT</a></li>
            </ul>
        </article>
    </div>
</div>



</body>
</html>